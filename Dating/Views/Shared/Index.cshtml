@model IEnumerable<Datalayer.Entities.User>

@{
    ViewBag.Title = "Home Page";
}



<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@if (Session["UserID"] != null)
{

    <div class="row">
        @foreach (var item in Model)
        {

                <div class="col-md-4">
                    <div>
                        <a href="@Url.Action("FriendList", "Friend")">
                            <img src=@item.PictureURL width="260" height="260" />
                        </a>
                        <h3>@item.Firstname @item.Lastname</h3>
                    </div>
                </div>
            

        }
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <div>
                    <a href="@Url.Action("LoginView", "Login")">
                        <img class="img-rounded img-responsive" src=@item.PictureURL width="260" height="260" />
                    </a>
                    <h3>@item.Firstname @item.Lastname</h3>
                </div>
            </div>
        }
    </div>
}
