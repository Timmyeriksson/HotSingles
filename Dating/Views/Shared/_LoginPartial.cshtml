@if (Session["UserID"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(Dating.Resources.Navbar.Settings, "EditAccount", "EditAccount", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                @Html.ActionLink(Dating.Resources.Navbar.Logout, "LogOut", "Login", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Dating.Resources.Navbar.Register, "RegisterAccount", "RegisterAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Dating.Resources.Navbar.Login, "LoginView", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
